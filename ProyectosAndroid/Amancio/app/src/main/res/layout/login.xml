<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo">
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:src="@drawable/titulo"
            android:id="@+id/imageTitulo"
            android:layout_width="387dp"
            android:layout_height="75dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="40dp"/>
        <EditText
            android:layout_width="200dp"
            android:id="@+id/nombreUsuario"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageTitulo"
            android:layout_alignRight="@+id/imageTitulo"
            android:layout_alignEnd="@+id/imageTitulo" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre de usuario: "
            android:textSize="16dp"
            android:layout_alignBaseline="@+id/nombreUsuario"
            android:layout_alignBottom="@+id/nombreUsuario"
            android:layout_toLeftOf="@+id/nombreUsuario"
            android:layout_toStartOf="@+id/nombreUsuario"
            android:layout_marginRight="18dp"
            android:layout_marginEnd="18dp" />
        <EditText
            android:layout_width="200dp"
            android:id="@+id/contraseña"
            android:layout_height="wrap_content"
            android:layout_below="@id/nombreUsuario"
            android:layout_alignRight="@+id/imageTitulo"
            android:layout_alignEnd="@+id/imageTitulo"
            android:inputType="textPassword" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="Contraseña: "
            android:layout_alignBaseline="@id/contraseña"
            android:layout_alignBottom="@id/contraseña"
            android:layout_toLeftOf="@id/contraseña"
            android:layout_toStartOf="@+id/nombreUsuario"
            android:layout_marginRight="18dp"
            android:layout_marginEnd="18dp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnLogin"
            android:text="Iniciar sesión y jugar"
            android:background="@drawable/btnestilo"
            android:layout_below="@+id/contraseña"
            android:layout_alignLeft="@+id/contraseña"
            android:layout_alignStart="@+id/contraseña"
            android:layout_marginTop="18dp" />
    </RelativeLayout>
</LinearLayout>