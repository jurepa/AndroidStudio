<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pjarana.ej1bol7.Ej2Bol2Activity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:id="@+id/numero1"
        android:hint="Numero 1"
        android:layout_marginStart="2dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/numero2"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/resultado"
        android:layout_marginLeft="2dp" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:id="@+id/numero2"
        android:hint="Numero 2"
        android:layout_marginEnd="24dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/resultado"
        android:layout_marginTop="33dp"
        app:layout_constraintTop_toBottomOf="@+id/resultado"
        android:layout_marginRight="24dp" />
    <RadioGroup
        android:layout_width="164dp"
        android:layout_height="130dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="33dp"
        app:layout_constraintTop_toBottomOf="@+id/numero1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sumar"
            android:textSize="23dp"
            android:id="@+id/sumar"
            android:onClick="calculadora"
            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Restar"
            android:textSize="23dp"
            android:id="@+id/restar"
            android:onClick="calculadora"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Multiplicar"
            android:textSize="23dp"
            android:id="@+id/multiplicar"
            android:onClick="calculadora"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dividir"
            android:textSize="23dp"
            android:id="@+id/dividir"
            android:onClick="calculadora"/>
    </RadioGroup>
    <TextView
        android:layout_width="0dp"
        android:layout_height="53dp"
        android:id="@+id/resultado"
        android:textSize="24dp"
        android:textColor="@color/colorPrimary"
        android:textAlignment="center"
        android:layout_marginStart="71dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="71dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="55dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="71dp"
        android:layout_marginRight="71dp" />

</android.support.constraint.ConstraintLayout>
