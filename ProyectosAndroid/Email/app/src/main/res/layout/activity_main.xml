<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pjarana.email.MainActivity">


    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:hint="Correo Receptor"
        android:id="@+id/receptor"
        android:inputType="textEmailAddress"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/receptor"
        android:layout_alignLeft="@+id/receptor"
        android:layout_alignRight="@+id/receptor"
        android:layout_alignStart="@+id/receptor"
        android:layout_below="@+id/receptor"
        android:layout_marginTop="50dp"
        android:hint="Mensaje"
        android:inputType="textLongMessage"
        android:id="@+id/message"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enviar"
        android:id="@+id/btnEnviar"
        android:layout_below="@id/message"
        android:layout_alignLeft="@id/message"
        android:layout_marginTop="10dp"
        />

</RelativeLayout>
