<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pjarana.examenprimeraevaluacionpjarana.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Elige el producto: "
        android:id="@+id/texto"
        android:textColor="@android:color/black"/>
    <Spinner
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/spinnerProductos"
        android:layout_below="@id/texto"
        android:background="#BDBDBD"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"></Spinner>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver producto"
        android:id="@+id/btnDetalles"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"/>

</RelativeLayout>
